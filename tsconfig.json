        "moduleResolution": "NodeNext",
        "target": "esnext",
        "sourceMap": true,
        "outDir": "dist",
        "sourceRoot": "src",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}